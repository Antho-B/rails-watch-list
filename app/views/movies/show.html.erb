<p style="color: green"><%= notice %></p>

<%= render @movie %>

<p><%= link_to 'Add a review', new_movie_review_path(@movie) %></p>

<ul>
  <% @movie.reviews.each do |review| %>
    <li>
      <%= review.content %>
      <%= link_to "Delete",
        review_path(review),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<div>
  <p><%= link_to "Edit this movie", edit_movie_path(@movie) %></p>
  <p><%= link_to "Back to movies", movies_path %></p>
  <p><%= button_to "Destroy this movie", @movie, method: :delete %></p>
</div>
